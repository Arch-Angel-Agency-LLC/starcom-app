/* Globe Controls - Moved from RightSideBar to LeftSideBar */
.globeControls {
  background: rgba(0, 20, 40, 0.9);
  border: 1px solid rgba(0, 196, 255, 0.3);
  border-radius: 8px;
  padding: 4px;
  margin-bottom: 2px;
  width: 100%;
}

.header {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 2px 4px;
  border-bottom: 1px solid rgba(0, 196, 255, 0.2);
  margin-bottom: 4px;
}

.icon {
  font-size: 0.7rem;
  color: #00c4ff;
}

.title {
  font-size: 0.6rem;
  color: #00c4ff;
  font-weight: bold;
  text-transform: uppercase;
}

.overlayToggles {
  display: flex;
  flex-direction: column;
  gap: 1px;
  margin-bottom: 4px;
}

.overlayToggle {
  width: 100%;
}

.toggleBtn {
  width: 100%;
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 2px 4px;
  background: rgba(0, 50, 100, 0.3);
  border: 1px solid rgba(0, 196, 255, 0.2);
  border-radius: 4px;
  color: #b3d9ff;
  font-size: 0.5rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.toggleBtn:hover {
  background: rgba(0, 100, 200, 0.4);
  border-color: rgba(0, 196, 255, 0.5);
}

.toggleBtn.active {
  background: rgba(0, 196, 255, 0.2);
  border-color: #00c4ff;
  color: #ffffff;
}

.toggleIcon {
  font-size: 0.4rem;
  color: #00ff41;
}

.toggleLabel {
  text-transform: capitalize;
  font-size: 0.5rem;
}

.quickActions {
  display: flex;
  flex-direction: column;
  gap: 1px;
}

.actionButton {
  width: 100%;
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 2px 4px;
  background: rgba(0, 30, 60, 0.5);
  border: 1px solid rgba(0, 196, 255, 0.2);
  border-radius: 4px;
  color: #b3d9ff;
  font-size: 0.5rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.actionButton:hover {
  background: rgba(0, 80, 160, 0.6);
  border-color: rgba(0, 196, 255, 0.4);
  color: #ffffff;
}

.actionButton span:first-child {
  font-size: 0.6rem;
}

.actionButton span:last-child {
  font-size: 0.5rem;
}
