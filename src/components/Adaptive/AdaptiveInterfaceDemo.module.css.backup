/* AdaptiveInterfaceDemo.module.css */

.demoContainer {
  background: rgba(0, 0, 0, 0.9);
  border: 2px solid #00C4FF;
  border-radius: 8px;
  padding: 20px;
  color: #00C4FF;
  font-family: 'Orbitron', monospace;
  max-width: 1200px;
  margin: 20px auto;
  box-shadow: 0 0 20px rgba(0, 196, 255, 0.3);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 15px;
  border-bottom: 1px solid rgba(0, 196, 255, 0.3);
}

.header h2 {
  margin: 0;
  color: #FFD700;
  font-size: 24px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.metrics {
  display: flex;
  gap: 20px;
  font-size: 12px;
  color: #00FF88;
}

.metrics span {
  background: rgba(0, 255, 136, 0.1);
  padding: 4px 8px;
  border-radius: 4px;
  border: 1px solid rgba(0, 255, 136, 0.3);
}

.navigation {
  display: flex;
  gap: 10px;
  margin-bottom: 20px;
}

.navButton {
  background: rgba(0, 196, 255, 0.1);
  border: 1px solid #00C4FF;
  color: #00C4FF;
  padding: 10px 15px;
  border-radius: 5px;
  cursor: pointer;
  font-family: 'Orbitron', monospace;
  font-size: 12px;
  text-transform: uppercase;
  transition: all 0.3s ease;
}

.navButton:hover {
  background: rgba(0, 196, 255, 0.2);
  box-shadow: 0 0 10px rgba(0, 196, 255, 0.4);
}

.navButton.active {
  background: rgba(0, 196, 255, 0.3);
  color: #FFFFFF;
  box-shadow: 0 0 15px rgba(0, 196, 255, 0.6);
}

.profileDisplay {
  background: rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(0, 196, 255, 0.4);
  border-radius: 6px;
  padding: 15px;
  margin-bottom: 20px;
}

.profileDisplay h3 {
  margin: 0 0 15px 0;
  color: #FFD700;
  font-size: 16px;
}

.profileGrid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 15px;
}

.profileItem {
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.profileItem label {
  font-size: 11px;
  color: #A0A0A0;
  text-transform: uppercase;
}

.roleValue {
  color: #FFD700;
  font-weight: bold;
  font-size: 14px;
}

.experienceValue {
  color: #00FF88;
  font-weight: bold;
  font-size: 14px;
}

.complexityValue {
  color: #FF6B6B;
  font-weight: bold;
  font-size: 14px;
}

.specializationsValue {
  color: #8B5CF6;
  font-size: 12px;
}

.demoContent {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 6px;
  padding: 20px;
}

/* Role Demo Styles */
.roleDemo h3,
.progressionDemo h3,
.aiDemo h3 {
  margin: 0 0 15px 0;
  color: #00C4FF;
  font-size: 18px;
}

.roleButtons {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 10px;
  margin: 15px 0;
}

.roleButton {
  background: rgba(255, 215, 0, 0.1);
  border: 1px solid #FFD700;
  color: #FFD700;
  padding: 10px;
  border-radius: 5px;
  cursor: pointer;
  font-family: 'Orbitron', monospace;
  font-size: 11px;
  text-transform: uppercase;
  transition: all 0.3s ease;
}

.roleButton:hover {
  background: rgba(255, 215, 0, 0.2);
  box-shadow: 0 0 10px rgba(255, 215, 0, 0.4);
}

.roleButton.currentRole {
  background: rgba(255, 215, 0, 0.3);
  color: #000000;
  font-weight: bold;
  box-shadow: 0 0 15px rgba(255, 215, 0, 0.6);
}

.featuresDisplay {
  margin-top: 20px;
  padding: 15px;
  background: rgba(0, 196, 255, 0.05);
  border-radius: 5px;
  border: 1px solid rgba(0, 196, 255, 0.2);
}

.featuresDisplay h4 {
  margin: 0 0 15px 0;
  color: #00C4FF;
  font-size: 14px;
}

.featuresList {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.featureItem {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8px 12px;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 4px;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.featureName {
  color: #FFFFFF;
  font-size: 12px;
  flex: 1;
}

.featureStatus {
  font-size: 10px;
  padding: 2px 6px;
  border-radius: 3px;
  text-transform: uppercase;
  font-weight: bold;
}

.featureStatus.accessible {
  background: rgba(0, 255, 136, 0.2);
  color: #00FF88;
  border: 1px solid rgba(0, 255, 136, 0.4);
}

.featureStatus.restricted {
  background: rgba(255, 107, 107, 0.2);
  color: #FF6B6B;
  border: 1px solid rgba(255, 107, 107, 0.4);
}

.unlockButton {
  background: rgba(0, 255, 136, 0.1);
  border: 1px solid #00FF88;
  color: #00FF88;
  padding: 4px 8px;
  border-radius: 3px;
  cursor: pointer;
  font-size: 10px;
  text-transform: uppercase;
  transition: all 0.3s ease;
}

.unlockButton:hover:not(:disabled) {
  background: rgba(0, 255, 136, 0.2);
  box-shadow: 0 0 8px rgba(0, 255, 136, 0.4);
}

.unlockButton:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Progression Demo Styles */
.progressionControls {
  display: flex;
  flex-direction: column;
  gap: 15px;
  margin: 15px 0;
}

.progressionButton {
  background: rgba(0, 255, 136, 0.1);
  border: 1px solid #00FF88;
  color: #00FF88;
  padding: 10px 15px;
  border-radius: 5px;
  cursor: pointer;
  font-family: 'Orbitron', monospace;
  font-size: 12px;
  text-transform: uppercase;
  transition: all 0.3s ease;
  align-self: flex-start;
}

.progressionButton:hover {
  background: rgba(0, 255, 136, 0.2);
  box-shadow: 0 0 10px rgba(0, 255, 136, 0.4);
}

.complexityControls {
  display: flex;
  align-items: center;
  gap: 10px;
  flex-wrap: wrap;
}

.complexityControls label {
  color: #A0A0A0;
  font-size: 12px;
  text-transform: uppercase;
}

.complexityButton {
  background: rgba(255, 107, 107, 0.1);
  border: 1px solid #FF6B6B;
  color: #FF6B6B;
  padding: 6px 10px;
  border-radius: 4px;
  cursor: pointer;
  font-family: 'Orbitron', monospace;
  font-size: 10px;
  text-transform: uppercase;
  transition: all 0.3s ease;
}

.complexityButton:hover {
  background: rgba(255, 107, 107, 0.2);
}

.complexityButton.active {
  background: rgba(255, 107, 107, 0.3);
  color: #FFFFFF;
  font-weight: bold;
  box-shadow: 0 0 10px rgba(255, 107, 107, 0.4);
}

.skillsDisplay {
  margin-top: 20px;
  padding: 15px;
  background: rgba(0, 255, 136, 0.05);
  border-radius: 5px;
  border: 1px solid rgba(0, 255, 136, 0.2);
}

.skillsDisplay h4 {
  margin: 0 0 15px 0;
  color: #00FF88;
  font-size: 14px;
}

.skillsList {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.skillItem {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 10px;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 5px;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.skillName {
  color: #FFFFFF;
  font-size: 12px;
  min-width: 120px;
}

.skillProgress {
  flex: 1;
  height: 8px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  overflow: hidden;
}

.skillBar {
  height: 100%;
  background: linear-gradient(90deg, #00FF88, #00C4FF);
  transition: width 0.3s ease;
}

.practiceButton {
  background: rgba(139, 92, 246, 0.1);
  border: 1px solid #8B5CF6;
  color: #8B5CF6;
  padding: 4px 8px;
  border-radius: 3px;
  cursor: pointer;
  font-size: 10px;
  text-transform: uppercase;
  transition: all 0.3s ease;
}

.practiceButton:hover {
  background: rgba(139, 92, 246, 0.2);
  box-shadow: 0 0 8px rgba(139, 92, 246, 0.4);
}

/* AI Demo Styles */
.aiControls {
  margin: 15px 0;
}

.generateButton {
  background: rgba(139, 92, 246, 0.1);
  border: 1px solid #8B5CF6;
  color: #8B5CF6;
  padding: 10px 15px;
  border-radius: 5px;
  cursor: pointer;
  font-family: 'Orbitron', monospace;
  font-size: 12px;
  text-transform: uppercase;
  transition: all 0.3s ease;
}

.generateButton:hover {
  background: rgba(139, 92, 246, 0.2);
  box-shadow: 0 0 10px rgba(139, 92, 246, 0.4);
}

.aiRecommendations {
  margin-top: 20px;
  padding: 15px;
  background: rgba(139, 92, 246, 0.05);
  border-radius: 5px;
  border: 1px solid rgba(139, 92, 246, 0.2);
}

.aiRecommendations h4 {
  margin: 0 0 15px 0;
  color: #8B5CF6;
  font-size: 14px;
}

.recommendationsList {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.recommendationItem {
  padding: 15px;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 6px;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.recommendationHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.recommendationType {
  color: #8B5CF6;
  font-size: 11px;
  font-weight: bold;
  text-transform: uppercase;
}

.recommendationPriority {
  font-size: 10px;
  padding: 2px 6px;
  border-radius: 3px;
  text-transform: uppercase;
  font-weight: bold;
}

.recommendationPriority.high {
  background: rgba(255, 107, 107, 0.2);
  color: #FF6B6B;
  border: 1px solid rgba(255, 107, 107, 0.4);
}

.recommendationPriority.medium {
  background: rgba(255, 215, 0, 0.2);
  color: #FFD700;
  border: 1px solid rgba(255, 215, 0, 0.4);
}

.recommendationPriority.low {
  background: rgba(0, 255, 136, 0.2);
  color: #00FF88;
  border: 1px solid rgba(0, 255, 136, 0.4);
}

.recommendationDescription {
  color: #FFFFFF;
  font-size: 12px;
  line-height: 1.4;
  margin: 0 0 10px 0;
}

.recommendationActions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.applyButton {
  background: rgba(0, 255, 136, 0.1);
  border: 1px solid #00FF88;
  color: #00FF88;
  padding: 6px 12px;
  border-radius: 4px;
  cursor: pointer;
  font-size: 10px;
  text-transform: uppercase;
  transition: all 0.3s ease;
}

.applyButton:hover {
  background: rgba(0, 255, 136, 0.2);
  box-shadow: 0 0 8px rgba(0, 255, 136, 0.4);
}

.confidenceScore {
  color: #A0A0A0;
  font-size: 10px;
}

.noRecommendations {
  color: #A0A0A0;
  font-size: 12px;
  font-style: italic;
  margin: 0;
}

.adaptationHistory {
  margin-top: 20px;
  padding: 15px;
  background: rgba(255, 107, 107, 0.05);
  border-radius: 5px;
  border: 1px solid rgba(255, 107, 107, 0.2);
}

.adaptationHistory h4 {
  margin: 0 0 15px 0;
  color: #FF6B6B;
  font-size: 14px;
}

.historyList {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.historyItem {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 8px;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 4px;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.historyTimestamp {
  color: #A0A0A0;
  font-size: 10px;
  min-width: 80px;
}

.historyAction {
  color: #FF6B6B;
  font-size: 11px;
  font-weight: bold;
  min-width: 120px;
}

.historyContext {
  color: #FFFFFF;
  font-size: 11px;
  flex: 1;
}

/* Responsive Design */
@media (max-width: 768px) {
  .demoContainer {
    margin: 10px;
    padding: 15px;
  }
  
  .header {
    flex-direction: column;
    gap: 10px;
    align-items: flex-start;
  }
  
  .metrics {
    flex-direction: column;
    gap: 5px;
  }
  
  .navigation {
    flex-direction: column;
  }
  
  .profileGrid {
    grid-template-columns: 1fr;
  }
  
  .roleButtons {
    grid-template-columns: 1fr;
  }
  
  .complexityControls {
    flex-direction: column;
    align-items: flex-start;
  }
}
