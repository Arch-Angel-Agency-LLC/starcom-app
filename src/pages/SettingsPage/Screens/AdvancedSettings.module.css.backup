.advancedSettings {
  padding: 20px;
  max-width: 800px;
}

.advancedSettings h2 {
  margin-bottom: 24px;
  color: var(--color-blue-400);
  font-size: 1.8rem;
}

.warningBanner {
  display: flex;
  align-items: center;
  gap: 12px;
  background: rgba(80, 60, 20, 0.2);
  border: 1px solid rgba(120, 100, 40, 0.3);
  border-radius: 6px;
  padding: 12px 16px;
  margin-bottom: 24px;
}

.warningIcon {
  font-size: 1.5rem;
}

.warningBanner span:last-child {
  color: var(--color-yellow-200);
  font-size: 0.9rem;
}

.settingSection {
  margin-bottom: 32px;
  background: rgba(30, 40, 60, 0.3);
  border-radius: 8px;
  padding: 20px;
  border: 1px solid rgba(60, 80, 120, 0.3);
}

.settingSection h3 {
  margin-bottom: 16px;
  color: var(--color-blue-300);
  font-size: 1.2rem;
  font-weight: 500;
}

.settingGroup {
  display: flex;
  flex-direction: column;
  gap: 16px;
  margin-bottom: 20px;
}

.setting {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.setting label {
  font-size: 0.9rem;
  color: var(--color-gray-200);
}

.setting select {
  background: rgba(20, 30, 50, 0.5);
  border: 1px solid rgba(60, 80, 120, 0.4);
  border-radius: 4px;
  color: var(--color-gray-100);
  padding: 8px 12px;
  font-size: 1rem;
  outline: none;
  transition: border-color 0.2s;
}

.setting select:focus {
  border-color: var(--color-blue-400);
  box-shadow: 0 0 0 2px rgba(80, 150, 255, 0.2);
}

.settingCheckbox {
  display: flex;
  align-items: center;
  gap: 10px;
}

.settingCheckbox input[type="checkbox"] {
  width: 18px;
  height: 18px;
  accent-color: var(--color-blue-400);
}

.settingCheckbox label {
  font-size: 1rem;
  color: var(--color-gray-100);
}

.actionRow {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-top: 16px;
}

.logControls {
  display: flex;
  gap: 12px;
  margin-top: 16px;
}

.actionButtons {
  display: flex;
  gap: 12px;
  margin-top: 32px;
}

.primaryButton {
  background: linear-gradient(to bottom, #3880ff, #2872e0);
  color: white;
  border: none;
  border-radius: 4px;
  padding: 10px 20px;
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

.primaryButton:hover {
  background: linear-gradient(to bottom, #4d90ff, #3880ff);
  transform: translateY(-1px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.secondaryButton {
  background: rgba(50, 70, 100, 0.3);
  color: var(--color-blue-200);
  border: 1px solid rgba(80, 120, 180, 0.4);
  border-radius: 4px;
  padding: 10px 20px;
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

.secondaryButton:hover {
  background: rgba(60, 80, 120, 0.4);
  color: var(--color-blue-100);
}

.dangerButton {
  background: rgba(80, 30, 30, 0.3);
  color: var(--color-red-200);
  border: 1px solid rgba(120, 60, 60, 0.4);
  border-radius: 4px;
  padding: 10px 20px;
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

.dangerButton:hover {
  background: rgba(100, 40, 40, 0.5);
  color: var(--color-red-100);
}
