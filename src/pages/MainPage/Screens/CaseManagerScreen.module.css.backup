.caseManagerScreen {
  width: 100%;
  height: 100%;
  background-color: #0a1520;
  color: #d0e0f0;
  display: flex;
  overflow: hidden;
}

.errorContainer {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  padding: 2rem;
  text-align: center;
  background-color: rgba(30, 40, 50, 0.9);
}

.errorContainer h2 {
  color: #ff6b6b;
  margin-bottom: 1rem;
}

.errorContainer button {
  margin-top: 1.5rem;
  padding: 0.5rem 1.5rem;
  background-color: #2a5a8a;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.errorContainer button:hover {
  background-color: #3a6a9a;
}

.errorContainer pre {
  margin-top: 1rem;
  padding: 1rem;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 4px;
  max-width: 100%;
  overflow: auto;
  color: #ff9999;
}
