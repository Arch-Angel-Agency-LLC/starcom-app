.graphPanel {
  display: flex;
  flex-direction: column;
  height: 100%;
  color: #e0e0e0;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  position: relative;
}

.toolbar {
  display: flex;
  justify-content: space-between;
  padding: 8px 10px;
  background-color: rgba(20, 27, 45, 0.8);
  border-bottom: 1px solid rgba(65, 132, 228, 0.25);
}

.toolSection {
  display: flex;
  gap: 6px;
}

.toolButton {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 28px;
  height: 28px;
  padding: 0;
  background: transparent;
  border: 1px solid rgba(65, 132, 228, 0.25);
  border-radius: 3px;
  color: #a0b4d8;
  cursor: pointer;
}

.toolButton:hover {
  background-color: rgba(65, 132, 228, 0.15);
  color: #4184e4;
}

.graphContainer {
  flex-grow: 1;
  position: relative;
  background-color: rgba(16, 20, 34, 0.7);
  overflow: hidden;
}

/* Style overrides for react-force-graph */
.graphContainer :global(.react-force-graph-2d) {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.detailsPanel {
  position: absolute;
  top: 50px;
  right: 10px;
  width: 200px;
  padding: 10px;
  background-color: rgba(20, 27, 45, 0.8);
  border: 1px solid rgba(65, 132, 228, 0.25);
  border-radius: 4px;
  z-index: 10;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

.entityDetails, .relationshipDetails {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.detailsTitle {
  margin: 0 0 8px 0;
  font-size: 14px;
  font-weight: 600;
  color: #4184e4;
  border-bottom: 1px solid rgba(65, 132, 228, 0.25);
  padding-bottom: 6px;
}

.detailType, .detailConnections, .detailSource, .detailTarget {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
}

.detailLabel {
  color: #a0b4d8;
}

.detailValue {
  font-weight: 500;
  color: #e0e0e0;
}

.helpText {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px;
  font-size: 12px;
  color: #a0b4d8;
  text-align: center;
}

.legend {
  position: absolute;
  bottom: 10px;
  left: 10px;
  display: flex;
  gap: 20px;
  padding: 10px;
  background-color: rgba(20, 27, 45, 0.8);
  border: 1px solid rgba(65, 132, 228, 0.25);
  border-radius: 4px;
  z-index: 10;
}

.legendSection {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.legendTitle {
  margin: 0;
  font-size: 11px;
  font-weight: 600;
  color: #a0b4d8;
}

.legendItems {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.legendItem {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 10px;
}

.legendColor {
  width: 10px;
  height: 10px;
  border-radius: 50%;
}

.legendLine {
  width: 20px;
  height: 2px;
}

.legendLabel {
  color: #e0e0e0;
}
