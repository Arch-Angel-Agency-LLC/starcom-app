.container {
  position: relative;
  font-family: 'Aldrich', 'Courier New', monospace;
}

.selector {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.5rem 1rem;
  background-color: rgba(10, 20, 30, 0.8);
  border: 1px solid rgba(0, 204, 255, 0.3);
  border-radius: 4px;
  color: rgba(255, 255, 255, 0.9);
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.2s ease;
  width: 100%;
  text-align: left;
}

.selector:hover {
  background-color: rgba(0, 204, 255, 0.1);
  border-color: rgba(0, 204, 255, 0.5);
}

.selector svg {
  color: rgba(0, 204, 255, 0.8);
}

.current {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dropdown {
  position: absolute;
  top: calc(100% + 0.5rem);
  left: 0;
  width: 100%;
  background-color: rgba(10, 20, 30, 0.95);
  border: 1px solid rgba(0, 204, 255, 0.3);
  border-radius: 0.5rem;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  flex-direction: column;
}

.searchContainer {
  display: flex;
  align-items: center;
  padding: 0.75rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.searchIcon {
  color: rgba(255, 255, 255, 0.5);
  margin-right: 0.5rem;
  flex-shrink: 0;
}

.searchInput {
  flex: 1;
  background: transparent;
  border: none;
  color: rgba(255, 255, 255, 0.9);
  outline: none;
  font-size: 0.875rem;
  font-family: inherit;
}

.searchInput::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.list {
  max-height: 20rem;
  overflow-y: auto;
  padding: 0.5rem 0;
}

.investigation {
  padding: 0.75rem;
  cursor: pointer;
  border-left: 3px solid transparent;
  transition: all 0.2s ease;
}

.investigation:hover {
  background-color: rgba(0, 204, 255, 0.1);
}

.active {
  background-color: rgba(0, 204, 255, 0.15);
  border-left-color: #00ccff;
}

.investigationHeader {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 0.25rem;
}

.investigationHeader svg {
  color: rgba(255, 255, 255, 0.7);
  flex-shrink: 0;
}

.priorityIcon {
  color: #fbbf24 !important;
}

.name {
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
}

.shared {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  margin-left: auto;
  background-color: rgba(255, 255, 255, 0.1);
  padding: 0.125rem 0.375rem;
  border-radius: 1rem;
  font-size: 0.75rem;
  color: rgba(255, 255, 255, 0.7);
}

.description {
  font-size: 0.8125rem;
  color: rgba(255, 255, 255, 0.7);
  margin: 0 0 0.5rem 1.75rem;
}

.meta {
  display: flex;
  align-items: center;
  font-size: 0.75rem;
  margin-left: 1.75rem;
}

.date {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  color: rgba(255, 255, 255, 0.5);
}

.tags {
  display: flex;
  margin-left: auto;
  gap: 0.25rem;
  flex-wrap: wrap;
}

.tag {
  background-color: rgba(0, 204, 255, 0.1);
  color: rgba(0, 204, 255, 0.8);
  padding: 0.125rem 0.375rem;
  border-radius: 1rem;
  font-size: 0.6875rem;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 2rem 1rem;
  color: rgba(255, 255, 255, 0.5);
  gap: 0.5rem;
  text-align: center;
}

.createButton {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin: 0.5rem;
  padding: 0.5rem;
  background-color: rgba(0, 204, 255, 0.1);
  border: 1px solid rgba(0, 204, 255, 0.3);
  border-radius: 4px;
  color: #00ccff;
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.2s ease;
  justify-content: center;
}

.createButton:hover {
  background-color: rgba(0, 204, 255, 0.2);
  border-color: rgba(0, 204, 255, 0.5);
}
