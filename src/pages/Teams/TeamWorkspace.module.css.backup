/* TeamWorkspace.module.css - Enhanced Team Workspace Styles */

.teamWorkspace {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 24px 24px 24px;
  color: #e0e0e0;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32px;
  padding-bottom: 24px;
  border-bottom: 1px solid #333;
}

.teamInfo h1 {
  font-size: 2rem;
  color: #00ff41;
  margin: 0 0 12px 0;
  font-weight: 600;
}

.teamMeta {
  display: flex;
  gap: 16px;
  flex-wrap: wrap;
}

.teamType,
.teamAgency,
.clearanceLevel,
.teamStatus {
  padding: 4px 12px;
  border-radius: 6px;
  font-size: 0.85rem;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.1);
}

.teamType {
  background: rgba(0, 255, 65, 0.2);
  color: #00ff41;
}

.teamAgency {
  background: rgba(0, 153, 255, 0.2);
  color: #0099ff;
}

.clearanceLevel {
  background: rgba(255, 102, 0, 0.2);
  color: #ff6600;
}

.headerActions {
  display: flex;
  gap: 12px;
}

.inviteButton {
  background: linear-gradient(135deg, #00ff41, #00cc33);
  color: #000;
  border: none;
  padding: 12px 20px;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.inviteButton:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(0, 255, 65, 0.3);
}

/* Tab Navigation */
.tabNavigation {
  display: flex;
  gap: 2px;
  margin-bottom: 32px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12px;
  padding: 4px;
}

.tab {
  background: transparent;
  color: #aaa;
  border: none;
  padding: 12px 20px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-weight: 500;
  white-space: nowrap;
}

.tab:hover {
  background: rgba(255, 255, 255, 0.1);
  color: #e0e0e0;
}

.tab.active {
  background: rgba(0, 255, 65, 0.2);
  color: #00ff41;
  box-shadow: 0 2px 8px rgba(0, 255, 65, 0.2);
}

/* Tab Content */
.tabContent {
  min-height: 400px;
}

.section {
  margin-bottom: 32px;
}

.section h2 {
  color: #00ff41;
  font-size: 1.5rem;
  margin-bottom: 16px;
  font-weight: 600;
}

.sectionHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
}

.sectionHeader h2 {
  margin-bottom: 0;
}

/* Members List */
.membersList {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 16px;
}

.memberCard {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12px;
  padding: 16px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.memberInfo {
  flex: 1;
}

.memberName {
  font-weight: 600;
  color: #e0e0e0;
  margin-bottom: 4px;
}

.memberRole {
  color: #00ff41;
  font-size: 0.9rem;
  margin-bottom: 2px;
}

.memberClearance {
  color: #aaa;
  font-size: 0.8rem;
}

.memberStatus {
  padding: 4px 8px;
  border-radius: 6px;
  font-size: 0.75rem;
  font-weight: 600;
  color: #000;
  text-transform: uppercase;
}

/* Specializations */
.specializationsList {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.specializationTag {
  background: rgba(0, 153, 255, 0.2);
  color: #0099ff;
  padding: 6px 12px;
  border-radius: 6px;
  font-size: 0.85rem;
  font-weight: 500;
}

/* Statistics */
.statsGrid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 16px;
}

.statCard {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12px;
  padding: 20px;
  text-align: center;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.statValue {
  font-size: 2rem;
  font-weight: 700;
  color: #00ff41;
  margin-bottom: 8px;
}

.statLabel {
  color: #aaa;
  font-size: 0.9rem;
}

/* Investigations */
.investigationsList {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.investigationCard {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12px;
  padding: 20px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.investigationCard:hover {
  background: rgba(255, 255, 255, 0.08);
  transform: translateY(-2px);
}

.investigationHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.investigationTitle {
  color: #00ff41;
  font-size: 1.2rem;
  margin: 0;
  cursor: pointer;
  font-weight: 600;
}

.investigationTitle:hover {
  text-decoration: underline;
}

.investigationStatus {
  font-weight: 600;
  font-size: 0.9rem;
  text-transform: uppercase;
}

.investigationDescription {
  color: #ccc;
  margin-bottom: 16px;
  line-height: 1.5;
}

.investigationMeta {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

.investigationType,
.investigationPriority,
.investigationProgress {
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 0.8rem;
  background: rgba(255, 255, 255, 0.1);
}

/* Communication */
.channelsList {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 16px;
}

.channelCard {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12px;
  padding: 16px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.channelName {
  font-weight: 600;
  color: #e0e0e0;
}

.channelStatus {
  background: rgba(0, 255, 65, 0.2);
  color: #00ff41;
  padding: 4px 8px;
  border-radius: 6px;
  font-size: 0.8rem;
}

.activityFeed {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.activityItem {
  display: flex;
  gap: 16px;
  padding: 12px 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.activityTime {
  color: #aaa;
  font-size: 0.85rem;
  min-width: 100px;
}

.activityText {
  color: #e0e0e0;
}

/* Buttons */
.primaryButton {
  background: linear-gradient(135deg, #00ff41, #00cc33);
  color: #000;
  border: none;
  padding: 12px 20px;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.primaryButton:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(0, 255, 65, 0.3);
}

.primaryButton:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

.secondaryButton {
  background: transparent;
  color: #aaa;
  border: 1px solid #555;
  padding: 12px 20px;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.secondaryButton:hover {
  background: rgba(255, 255, 255, 0.1);
  color: #e0e0e0;
}

/* Empty State */
.emptyState {
  text-align: center;
  padding: 60px 20px;
  color: #aaa;
}

.emptyState p {
  margin-bottom: 20px;
  font-size: 1.1rem;
}

/* Modal */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modalContent {
  background: #1a1a1a;
  border-radius: 12px;
  width: 100%;
  max-width: 500px;
  border: 1px solid #333;
}

.modalHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 24px;
  border-bottom: 1px solid #333;
}

.modalHeader h3 {
  color: #00ff41;
  margin: 0;
  font-size: 1.3rem;
}

.closeButton {
  background: none;
  border: none;
  color: #aaa;
  font-size: 1.5rem;
  cursor: pointer;
  padding: 0;
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.closeButton:hover {
  color: #e0e0e0;
}

.modalBody {
  padding: 24px;
}

.inputGroup {
  margin-bottom: 20px;
}

.inputGroup label {
  display: block;
  color: #e0e0e0;
  margin-bottom: 8px;
  font-weight: 500;
}

.inputGroup input,
.inputGroup select {
  width: 100%;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid #555;
  border-radius: 8px;
  padding: 12px;
  color: #e0e0e0;
  font-size: 1rem;
}

.inputGroup input:focus,
.inputGroup select:focus {
  outline: none;
  border-color: #00ff41;
  box-shadow: 0 0 0 2px rgba(0, 255, 65, 0.2);
}

.modalFooter {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
  padding: 20px 24px;
  border-top: 1px solid #333;
}

/* Loading and Error States */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  color: #aaa;
  font-size: 1.1rem;
}

.error {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  color: #ff6666;
  font-size: 1.1rem;
}

/* Responsive Design */
@media (max-width: 768px) {
  .teamWorkspace {
    padding: 0 16px 16px 16px;
  }
  
  .header {
    flex-direction: column;
    gap: 20px;
    align-items: stretch;
  }
  
  .teamMeta {
    gap: 8px;
  }
  
  .tabNavigation {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }
  
  .tab {
    padding: 10px 16px;
    font-size: 0.9rem;
  }
  
  .membersList {
    grid-template-columns: 1fr;
  }
  
  .statsGrid {
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  }
  
  .channelsList {
    grid-template-columns: 1fr;
  }
  
  .modal {
    padding: 20px;
  }
  
  .modalContent {
    max-width: none;
  }
}
