{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and Run Starcom App",
			"type": "shell",
			"command": "npm run build && npm run dev",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$tsc"]
